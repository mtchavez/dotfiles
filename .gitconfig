[color]
    ui = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    editor="vim -f"
    excludesfile=~/.gitignore
    commentChar = %
[alias]
    br = branch -vv
    ci = commit
    clo = !find . -type f -iname *.orig -exec git clean -f {} "\\;"
    cm = commit -S -m
    co = checkout
    dc = diff --cached
    df = diff
    fp = push --force-with-lease
    lg = log -p
    lgp = log --pretty=oneline --abbrev-commit
    lgs = log --stat
    lgsp = log --stat -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
    pl = !git fetch -p && git pull --ff-only
    plt = !git fetch -p --tags && git pull --tags
    ss = show --stat
    ssp = show --stat -p
    st = status
[user]
    name = Chavez
    email = matthew@el-chavez.me
    signingkey = C810C27E
[push]
    default = upstream
[pull]
    default = upstream
    rebase = true
[rebase]
    autoSquash = true
    autoStash = true
[commit]
    gpgsign = true
[gc]
    pruneExpire = 12 hours ago
[merge]
    tool = opendiff
